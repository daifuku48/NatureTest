<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <TextView
        android:id = "@+id/resultsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:fontFamily="@font/robotomono_semibold"
        android:text = "Results"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id = "@+id/percentageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Percentage"
        android:textSize="20sp"
        android:textColor="@color/green_1"
        android:fontFamily="@font/robotomono_medium"
        app:layout_constraintTop_toBottomOf="@id/resultsTextView"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp" />

    <TextView
        android:id = "@+id/gradeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Grade: "
        android:textSize="20sp"
        android:textColor="@color/green_1"
        android:fontFamily="@font/robotomono_medium"
        app:layout_constraintTop_toBottomOf="@id/percentageTextView"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp" />

    <ImageView
        android:id = "@+id/gradeImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src = "@drawable/bad_mark"
        app:layout_constraintTop_toBottomOf="@id/gradeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id = "@+id/buttonToBack"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:fontFamily="@font/robotomono_semibold"
        android:background="@drawable/button_background"
        android:text = "Back to test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gradeImage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>